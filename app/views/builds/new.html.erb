<div class="mx-auto max-w-3xl py-12">
  <div class="rounded-lg border border-slate-200 bg-white p-8 shadow-sm">
    <h1 class="text-2xl font-semibold text-slate-900">Rails CI Build Dashboard</h1>
    <p class="mt-2 text-slate-600">
      Enter a GitHub Actions workflow run ID from the proof-of-concept pipeline to view the aggregated Rails build status.
    </p>

    <%= form_with url: lookup_builds_path, method: :post, class: "mt-8" do |form| %>
      <div>
        <%= form.label :run_id, "Workflow run ID", class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :run_id, value: params[:id], placeholder: "e.g. 1234567890", class: "mt-2 w-full rounded-md border border-slate-300 px-3 py-2 text-base shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200" %>
      </div>

      <div class="mt-6">
        <%= form.submit "View build", class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white transition hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>
